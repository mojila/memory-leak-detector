{
    "name": "Meleak",
    "description": "Tool for Memory Leak Detector",
    "version": "1.0",
    "author": "Mojila",
    "manifest_version": 2,
    "devtools_page": "devtools.html",
    "browser_action": {
        "default_popup": "popup/index.html",
        "default_title": "Memory Leak Detector"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["scripts/content.js"]
    }]
}