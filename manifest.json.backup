{
  "name": "Memory Leak Detector",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Easy way to detect memory leak in your web app.",
  "homepage_url": "https://memory-leak-detector.github.io",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Memory Leak Detection: Actions",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "contentSettings",
    "fileBrowserHandler",
    "tts",
    "ttsEngine",
    "idle",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "http://localhost/*",
        "http://localhost:*/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/*",
        "http://localhost/*",
        "http://localhost:*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}